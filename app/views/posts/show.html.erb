<h2><%= @post.title %></h2>

<%= @post.text %>
<h3>Hall of fame :: Recent Commenters</h3>
<ul><%= recent_commenters(@post) %></ul>
<h3>All Comments</h3>
<% @comments.find_each do |comment| %>
  <p>
  <i>Commented on:<%= comment.created_at %></i><br/>
  <i>Commented by:<%= comment %> </i><br/>
  <%= comment.text %>
  </p>
<% end %>
<% if logged_in? %>
  <h3>Your Comment</h3>
  <!-- Passed local variables -->
  <%= render 'comments/new', :post => @post, :comment => @comment %>
<% end %>

